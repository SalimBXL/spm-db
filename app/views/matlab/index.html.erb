<%= render "header" %>
<%= render "progress_bar" %>

<br>

<div class="container">

    <div class="card" style="width:400px">
    <div class="card-body">
        <h4 class="card-title">CAMERA</h4>
        <p class="card-text">Please click on the button corresponding to the camera of the study for wich you want to create a new SPM.</p>

        <div class="d-flex justify-content-center">

            <% @cameras.keys.each do |camera| %>
                <div class="p-2">
                    <a href="<%= matlab_path(camera: camera) %>" class="btn btn<%= "-outline" unless @camera == camera.to_s %>-info" role="button">
                        <span class="material-icons">center_focus_weak</span><br>
                        <%= camera %> - <%= @cameras[camera] %>
                    </a>
                </div>
            <% end %>

        </div>
    </div>
    </div>

    <br>

    <div class="card" style="width:400px">
    <div class="card-body">
        <h4 class="card-title">MATLAB</h4>
        <p class="card-text">Press the button below to run Matlab.</p>

        <div class="d-flex justify-content-center">

            <div class="p-2">
                <a href="<%= get_zip_path %>" 
                    class="
                        btn 
                            btn<%= "-outline" unless @camera %>-success
                            <%= " disabled "  unless @camera %>
                        "
                    role="button">
                    <span class="material-icons">grid_view</span><br>
                    START
                </a>
            </div>

        </div>
    </div>
    </div>

</div>

